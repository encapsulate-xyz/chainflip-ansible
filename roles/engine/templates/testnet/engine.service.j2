[Unit]
Description={{ service_identifier }}

[Service]
User={{ service_identifier }}
Group={{ service_identifier }}
WorkingDirectory={{ engine_home_dir }}
EnvironmentFile={{ engine_environment_general_file_path }}
ExecStart={{ engine_bin_dir }}/{{ service_identifier }} --config-root {{ engine_home_dir }}
Restart=always
RestartSec=4
LimitNOFILE=65536
MemoryLimit=64G
StandardOutput=append:{{ engine_log_file_path }}
StandardError=inherit

[Install]
WantedBy=multi-user.target